# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-secret-key-change-in-production

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/llm_consulting
SQLALCHEMY_TRACK_MODIFICATIONS=False

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=86400

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# LLM Configuration
OPENAI_API_KEY=sk-your-openai-key-here
DEFAULT_LLM_PROVIDER=openai

# Storage Configuration (S3/MinIO)
USE_MINIO=true
MINIO_URL=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
S3_BUCKET=llm-consulting
S3_REGION=us-west-1

# AWS Configuration (if using AWS S3)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-west-1

# Vector DB Configuration
PINECONE_API_KEY=your-pinecone-key
PINECONE_ENVIRONMENT=us-west1-gcp
VECTOR_DB_INDEX=govtech-regulations

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/llm-consulting/app.log

# Server Configuration
HOST=0.0.0.0
PORT=5000
WORKERS=4
